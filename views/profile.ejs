<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Favorite Songs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">My Top 5 Favorite Songs</h1>
        <ul class="list-group" id="favorite-songs">
            <li class="list-group-item">Song 1</li>
            <li class="list-group-item">Song 2</li>
            <li class="list-group-item">Song 3</li>
            <li class="list-group-item">Song 4</li>
            <li class="list-group-item">Song 5</li>
        </ul>
        
        <h2 class="mt-5">Please Recommend Me A Song!</h2>
        <div class="input-group mb-3">
            <input type="text" id="song-input" class="form-control" placeholder="Enter a song">
            <button class="btn btn-primary" id="add-song">Add</button>
        </div>
        <ul class="list-group" id="recommended-songs"></ul>
    </div>

    <script>
        $(document).ready(function() {
            $("#add-song").click(function() {
                var song = $("#song-input").val().trim();
                if (song !== "") {
                    $("#recommended-songs").append(
                        `<li class="list-group-item d-flex justify-content-between align-items-center">
                            ${song}
                            <button class="btn btn-danger btn-sm delete-song">Delete</button>
                        </li>`
                    );
                    $("#song-input").val("");
                }
            });
            
            $("#recommended-songs").on("click", ".delete-song", function() {
                $(this).parent().remove();
            });
        });
    </script>
</body>
</html>
